{
  "$schema": "../../umbraco-package-schema.json",
  "name": "My Auth Package",
  "allowPublicAccess": true,
  "extensions": [
    {
      "type": "authProvider",
      "alias": "Our.Umbraco.PasslessLogin",
      "name": "PasslessLogin",
      "forProviderName": "Umbraco.PasslessLogin",
      "element": "/App_Plugins/ExternalLoginProviders/client.js",
      "meta": {
        "label": "PasslessLogin",
        "defaultView": {
          "icon": "icon-cloud"
        },
        "behavior": {
          "autoRedirect": false
        },
        "linking": {
          "allowManualLinking": false
        }
      }
    },
    {
      "type": "userProfileApp",
      "alias": "Our.Umbraco.PasskeysManager",
      "name": "PasskeysManager",
      "element": "/App_Plugins/ExternalLoginProviders/client.js",
      "elementName": "passkeys-manager",
      "meta": {
        "label": "Manage Passkeys",
        "icon": "icon-fingerprint"
      }
    }
  ]
}