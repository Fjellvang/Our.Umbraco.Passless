{
  "$schema": "../../umbraco-package-schema.json",
  "name": "My Auth Package",
  "allowPublicAccess": true,
  "extensions": [
    {
      "type": "authProvider",
      "alias": "Our.Umbraco.PasslessLogin",
      "name": "PasslessLogin",
      "forProviderName": "Umbraco.PasslessLogin",
      "element": "/App_Plugins/ExternalLoginProviders/my-external-login.js",
      "elementName": "passless-login-view",
      "meta": {
        "label": "PasslessLogin",
        "defaultView": {
          "icon": "icon-cloud"
        },
        "behavior": {
          "autoRedirect": false
        },
        "linking": {
          "allowManualLinking": true
        }
      }
    },
    {
      "type": "localization",
      "alias": "Passless.en",
      "name": "English (Passless)",
      "js": "/App_Plugins/ExternalLoginProviders/Localization/en.js"
    },
    {
      "type": "localization",
      "alias": "Passless.da",
      "name": "Danish (Passless)",
      "js": "/App_Plugins/ExternalLoginProviders/Localization/da.js"
    }
  ]
}